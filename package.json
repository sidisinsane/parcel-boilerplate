{
  "name": "parcel-boilerplate",
  "version": "0.1.0",
  "description": "A simple Boilerplate using Parcel JS.",
  "scripts": {
    "start": "node_modules/.bin/parcel index.html",
    "build": "node_modules/.bin/parcel build index.html",
    "build:favicon": "node ./tasks/favicon.js",
    "prestart": "npm run build:favicon",
    "prebuild": "rm -rf dist && npm run build:favicon",
    "generate:docs": "npm run generate:jsdoc",
    "generate:jsdoc": "node_modules/.bin/jsdoc -r --configure jsdoc.json --verbose",
    "test:build": "node_modules/.bin/parcel ./tests/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sidisinsane/parcel-boilerplate.git"
  },
  "author": "Dirk Sidney Jansen <sid@sidisinsane.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "braintree-jsdoc-template": "^3.3.0",
    "jsdoc": "^3.6.3",
    "parcel-bundler": "^1.12.4",
    "postcss-flexbugs-fixes": "^4.2.0",
    "postcss-preset-env": "^6.7.0"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "invert-color": "^2.0.0"
  }
}
